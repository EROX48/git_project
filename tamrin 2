import random

print('khosh amadid!')

x = input('mikhay gool ya pooch bazi konim? (lotfan ba yes ya no javab bede)')

if x == 'yes':
    print('har vaght ham khasti biay biron kalame exit ro benevis')

elif x == 'no':
    print('hale')
    exit()

while x == 'yes':

    gool_ya_pooch = input('to kodome? right or left?')

    if gool_ya_pooch == 'right':

        right = random.randint(3 , 4)

        if right == 3:
          print('afarin! goole')
        elif right == 4:
          print('ridi! pooche')
        
    elif gool_ya_pooch == 'left':

     left = random.randint(1 , 2)

     if left == 2:
           print('afarin! goole')
     elif left == 1:
         print('ridi! pooche')
    
    if gool_ya_pooch == 'exit':
        print('khodafez')
        print('iran bord')
        exit()
